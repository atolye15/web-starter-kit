<!DOCTYPE HTML>
<html lang="en">
  <head>
    <meta charset=utf-8>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name=viewport content="width=device-width, initial-scale=1">
    {% block meta %}
      <title>Default Project</title>
    {% endblock %}
    <link rel=stylesheet href="css/main{% if isProduction() %}.min{% endif %}.css">
    {% block headerStylesheets %}{% endblock %}
    {% block headerJavascripts %}{% endblock %}
  </head>
  <body>
  {% if isFileExists("../../.tmp/img/sprite.svg") %}
  <div class="u-hidden">
    {% include "../../.tmp/img/sprite.svg" %}
  </div>
  {% endif %}
  {% block body %}{% endblock %}

  <!-- Javascript Files -->
  {% block footerVendorJavascripts %}{% endblock %}
  {% if isProduction() %}
  <script src="js/app.min.js"></script>
  {% else %}
  <script src="js/libs.js"></script>
  <script src="js/main.js"></script>
  {% endif %}
  {% block footerJavascripts %}{% endblock %}
  </body>
</html>
